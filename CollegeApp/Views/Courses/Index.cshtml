@model IEnumerable<CollegeApp.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Courses" )" class="btn btn-default"><i class="glyphicon glyphicon-plus-sign"></i>Create New</a>
</p>
<div class="row">
    @Html.Partial("_Message")
</div>
<table class="table table-striped table-bordered table-advance table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentFee)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentFee)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Courses", new { id = item.Id })" class="btn default btn-xs blue"><i class="fa fa-edit"></i> Edit</a>
                <a href="@Url.Action("Details", "Courses", new { id = item.Id })" class="btn default btn-xs purple"><i class="fa fa-edit"></i> Details</a>
                <a href="@Url.Action("Delete", "Courses", new { id = item.Id })" class="btn default btn-xs red"><i class="fa fa-edit"></i> Delete</a>
            </td>
        </tr>
    }

</table>
